{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "ignore": [".vscode"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "lineWidth": 120,
    "indentWidth": 2,
    "attributePosition": "auto",
    "lineEnding": "lf",
    "ignore": [".vscode"]
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
