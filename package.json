{
  "name": "@mxmalykhin/template-package",
  "description": "My template for public npm packages (TS, CJS/ESM, Biome, Jest, Rollup + esbuild, Git hooks)",
  "version": "0.0.8-development",
  "author": {
    "name": "Maxim Malykhin",
    "email": "mxmalykhin@users.noreply.github.com",
    "url": "https://github.com/mxmalykhin"
  },
  "bugs": "https://github.com/mxmalykhin/template-package/issues",
  "clean-publish": {
    "files": [".*"],
    "withoutPublish": true,
    "tempDir": "publish-package",
    "cleanDocs": true,
    "packageManager": "pnpm"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@jest/types": "^29.6.3",
    "@microsoft/api-extractor": "^7.43.3",
    "@microsoft/api-extractor-model": "^7.28.15",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-url": "^8.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.11",
    "clean-publish": "^4.4.0",
    "depcheck": "^1.4.7",
    "esbuild": "^0.21.1",
    "execa": "^9.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.14",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "npm-run-all2": "^6.1.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.17.2",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-node-externals": "^7.1.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "skott": "^0.33.2",
    "ts-jest": "^29.1.2",
    "ts-morph": "^22.0.0",
    "ts-patch": "^3.1.2",
    "tslib": "^2.6.2",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.4.7"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/esm/*.d.ts",
        "default": "./dist/esm/*.js"
      },
      "require": {
        "types": "./dist/cjs/*.d.cts",
        "default": "./dist/cjs/*.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": ["dist/**/*", "README.md", "TODO.md", "LICENSE", "CHANGELOG.md", "**/package.json"],
  "homepage": "https://github.com/mxmalykhin/template-package#readme",
  "keywords": [
    "biome-template",
    "boilerplate",
    "build-tools",
    "cjs",
    "code-quality-tools",
    "development-tools",
    "esbuild-template",
    "esm",
    "jest-template",
    "library-starter",
    "module-bundler",
    "npm-package-template",
    "project-starter",
    "rollup-template",
    "testing-framework",
    "typescript-template"
  ],
  "license": "MIT",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "publishConfig": {
    "directory": "publish-package",
    "access": "public"
  },
  "release": {
    "branches": ["main"]
  },
  "repository": "mxmalykhin/template-package.git",
  "scripts": {
    "analyze": "skott dist/esm/index.js --displayMode=webapp --trackThirdPartyDependencies",
    "analyze:cjs": "skott dist/cjs/index.cjs --displayMode=webapp --trackThirdPartyDependencies",
    "build": "run-s format lint test clean build:compile build:compile:types",
    "build:compile": "rollup --environment NODE_ENV:production -c scripts/rollup/build.ts --configPlugin typescript2",
    "build:compile:types": "tspc --project tsconfig.dist.json --emitDeclarationOnly --declaration --declarationMap && tsx scripts/dts/index.ts && rimraf temp-types",
    "clean": "rimraf coverage jest.config.js dist temp-types .tsbuildinfo .rollup.cache publish-package",
    "dev": "rollup --environment NODE_ENV:development -c scripts/rollup/build.ts --configPlugin typescript2 -w",
    "lint": "run-p lint:*",
    "format": "biome format .",
    "lint:biome": "biome lint .",
    "lint:packages": "depcheck",
    "lint:tspc": "tspc --noEmit",
    "postpublish": "pnpm run clean",
    "prepare": "ts-patch install -s && (husky || true)",
    "prepublishOnly": "run-s build && clean-publish",
    "pretest": "tspc jest.config.ts",
    "test": "jest --config jest.config.js",
    "test:coverage": "pnpm run test --coverage",
    "test:watch": "pnpm run test --watch"
  },
  "sideEffects": false,
  "type": "module",
  "types": "dist/index.d.ts"
}
